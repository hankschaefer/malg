<div class="GROUP">
    <h3 class = "mt-3">
        <%= "Group " + @group.name %>
        <hr>
    </h3>
    <% if current_user.group == nil %>
        <%= form_with model: @group, url: join_group_path(@group), method: :join do |form| %>
            <%= label_tag(:password, "Password") %>
            <br>
            <%= form.password_field :password %>
            <br>
            <%= submit_tag "JOIN", :class => "mt-3 btn btn-success"%>
        <% end %>
    <% else %>
        <%= button_to 'Leave', leave_group_path(@group), method: :delete, :class => "mt-3 btn btn-secondary" %>
        <%= button_to 'Delete', group_path(@group), method: :delete, :class => "mt-3 btn btn-danger" %>
    <% end %>
</div>

